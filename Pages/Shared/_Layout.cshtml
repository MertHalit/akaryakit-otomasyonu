<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Akaryakıt Otomasyonu</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            display: flex;
            margin: 0;
        }

        .sidebar {
            width: 220px;
            height: 100vh;
            background-color: #343a40;
            padding-top: 20px;
            position: fixed;
            overflow-y: auto;
        }

        .sidebar a {
            color: white;
            padding: 12px 20px;
            display: block;
            text-decoration: none;
            font-size: 15px;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home"></i> Dashboard</a>
        <a asp-controller="Tank" asp-action="Index"><i class="fas fa-gas-pump"></i> Tanklar</a>
        <a asp-controller="Tank" asp-action="Create"><i class="fas fa-plus"></i> Tank Ekle</a>
        <a asp-controller="Station" asp-action="Index"><i class="fas fa-map-marker-alt"></i> İstasyonlar</a>
        <a asp-controller="Fueling" asp-action="History"><i class="fas fa-history"></i> Yakıt Geçmişi</a>
        <a asp-controller="Fueling" asp-action="Report"><i class="fas fa-chart-bar"></i> Yakıt Raporu</a>
        <a asp-controller="Fueling" asp-action="LowFuel"><i class="fas fa-exclamation-triangle"></i> Düşük Tanklar</a>
        <a asp-controller="Fueling" asp-action="StationReport"><i class="fas fa-map-pin"></i> İstasyon Raporu</a>
        <a asp-controller="Fueling" asp-action="Create"><i class="fas fa-plus-circle"></i> Yakıt Dolumu</a>

        <!-- ✅ EKLENDİ: Akaryakıt Fiyatları bağlantısı -->
        <a asp-controller="FuelPrice" asp-action="Index"><i class="fas fa-gas-pump"></i> ⛽ Akaryakıt Fiyatları</a>

        <a asp-controller="Account" asp-action="Logout" class="text-danger"><i class="fas fa-sign-out-alt"></i> Çıkış</a>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@model AkaryakitOtomasyonu.Models.Tank

@{
    ViewData["Title"] = "Tank Sil";
}

<h2>Tank Sil</h2>

<div class="alert alert-warning">
    <p><strong>@Model.Name</strong> adlı tankı silmek istediğinize emin misiniz?</p>
</div>

<dl class="row">
    <dt class="col-sm-2">Kapasite</dt>
    <dd class="col-sm-10">@Model.Capacity</dd>

    <dt class="col-sm-2">Mevcut Seviye</dt>
    <dd class="col-sm-10">@Model.CurrentLevel</dd>

    <dt class="col-sm-2">İstasyon</dt>
    <dd class="col-sm-10">@Model.Station?.Name</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>


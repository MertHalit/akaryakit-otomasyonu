@model List<AkaryakitOtomasyonu.Models.Station>

@{
    ViewData["Title"] = "İstasyonlar";
}

<h2>İstasyon Listesi</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Yeni İstasyon</a>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Henüz istasyon eklenmemiş.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Ad</th>
                <th>Konum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var station in Model)
            {
                <tr>
                    <td>@station.Name</td>
                    <td>@station.Location</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@station.Id" class="btn btn-info btn-sm">📄</a>
                        <a asp-action="Edit" asp-route-id="@station.Id" class="btn btn-warning btn-sm">✏️</a>
                        <a asp-action="Delete" asp-route-id="@station.Id" class="btn btn-danger btn-sm">🗑️</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

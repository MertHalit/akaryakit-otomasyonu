<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Akaryakıt Otomasyonu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sol Menü -->
        <div class="bg-dark text-white p-3" style="min-width: 220px; min-height: 100vh;">
            <h4 class="mb-4">Menü</h4>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">📊 Dashboard</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Tank" asp-action="Index">🛢️ Tanklar</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Tank" asp-action="Create">➕ Tank Ekle</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Stations" asp-action="Index">🏭 İstasyonlar</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Fueling" asp-action="History">📜 Yakıt Geçmişi</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Fueling" asp-action="Report">📈 Yakıt Raporu</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Fueling" asp-action="LowFuel">⚠️ Düşük Tanklar</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Fueling" asp-action="StationReport">📄 İstasyon Raporu</a></li>

                <li class="nav-item"><a class="nav-link text-white" asp-controller="Fueling" asp-action="Create">⛽ Yakıt Dolumu</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="FuelPrice" asp-action="Index">📊 Akaryakıt Fiyatları</a></li> <!-- ✅ düzeltildi -->
                <!-- Çıkış -->
                <li class="nav-item mt-3">
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-link btn btn-link text-danger" style="padding-left: 0;">
                            🚪 Çıkış
                        </button>
                    </form>
                </li>

            </ul>
        </div>

        <!-- İçerik -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
